{
  "name": "@pardnchiu/jwt-auth",
  "version": "0.1.1",
  "description": "A comprehensive JWT authentication system with refresh token management for Node.js applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "postpublish": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "ts-node src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "jwt",
    "authentication",
    "refresh-token",
    "nodejs",
    "express",
    "redis",
    "typescript"
  ],
  "author": "pardnchiu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pardnchiu/nodejs-jwt-auth.git"
  },
  "bugs": {
    "url": "https://github.com/pardnchiu/nodejs-jwt-auth/issues"
  },
  "homepage": "https://github.com/pardnchiu/nodejs-jwt-auth#readme",
  "dependencies": {
    "jsonwebtoken": "^9.0.0",
    "redis": "^4.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/express": "^4.17.0",
    "@types/express-session": "^1.17.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "peerDependencies": {
    "express": "^4.18.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}